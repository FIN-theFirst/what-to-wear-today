          <div>rainjacket</div>
        </label>

        <label class="icon-label col text-center">
          <input type="checkbox" name="hasWinterJacket" id="hasWinterJacket" <%=hasWinterJacket ? "checked" : "" %>>
          <img src="/icons/wintercoat.svg" alt="Winterjacke">
          <div>winterjacket</div>
        </label>

        <label class="icon-label col text-center">
          <input type="checkbox" name="hasLightJacket" id="hasLightJacket" <%=hasLightJacket ? "checked" : "" %>>
          <img src="/icons/lightjacket.svg" alt="lightjacket">
          <div>lightjacket</div>
        </label>

        <label class="icon-label col text-center">
          <input type="checkbox" name="hasLongPants" id="hasLongPants" <%=hasLongPants ? "checked" : "" %>>
          <img src="/icons/pants.svg" alt="pants">
          <div>pants</div>
        </label>

        <label class="icon-label col text-center">
          <input type="checkbox" name="hasShortPants" id="hasShortPants" <%=hasShortPants ? "checked" : "" %>>
