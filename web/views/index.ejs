          <img src="/icons/shoes.svg" alt="shoes">
          <div>shoes</div>
        </label>

        <label class="icon-label col text-center">
          <input type="checkbox" name="hasWarmShoes" id="hasWarmShoes" <%=hasWarmShoes ? "checked" : "" %>>
